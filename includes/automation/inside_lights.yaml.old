- alias: turn off inside lights at 8am
  id: 30acafcf-68f6-4055-b438-7a4c5f9bd424
  trigger:
   platform: time_pattern
   hours: 08
   minutes: 01
   seconds: 01
  condition:
     - condition: state
       entity_id: group.indoor_lights
       state: 'on'
  action:
   service: homeassistant.turn_off
   entity_id: group.indoor_lights